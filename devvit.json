{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "predictablywrong",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "predictablywrong",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "permissions": {
    "redis": true
  },
  "jobs": {
    "daily-results-processor": {
      "cron": "0 0 * * *",
      "endpoint": "/internal/jobs/daily-results"
    },
    "weekly-cleanup": {
      "cron": "0 2 * * 0",
      "endpoint": "/internal/jobs/weekly-cleanup"
    }
  }
}
