{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "predictablywrong",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Ask a Spicier Question",
        "description": "Think you can do better? Prove it. Submit your own.",
        "location": "subreddit",
        "forUserType": "user",
        "endpoint": "/internal/menu/question-form"
      }
    ]
  },
  "forms": {
    "questionForm": "/internal/form/process-question"
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "permissions": {
    "redis": true
  },
  "jobs": {
    "close-voting-processor": {
      "cron": "0 * * * *",
      "endpoint": "/internal/jobs/close-voting"
    },
    "weekly-cleanup": {
      "cron": "0 2 * * 0",
      "endpoint": "/internal/jobs/weekly-cleanup"
    }
  }
}
